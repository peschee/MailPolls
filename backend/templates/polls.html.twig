{% extends "main.html.twig" %}

{% block content %}
<h2>Your polls</h2>
<table class="table table-bordered table-striped table-condensed">
    {% for poll in polls %}
    <tr><td>{{ poll.id }}</td><td>{{ poll.name }}</td><td><a href="poll.php?id={{ poll.id }}">{{ poll.votes }} Votes - view results</a></td></tr>
    {% endfor %}
</table>
{% endblock %}